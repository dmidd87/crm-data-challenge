require 'pp'
load '../data/crm.rb'

result = []

CRM[:people].each do |person|
  person[:employments].each do |employment|
    if employment.any?
      result << {
        :id => person[:id],
        :first_name => person[:first_name],
        :last_name => person[:last_name]
      }
    end
  end
end

pp result
